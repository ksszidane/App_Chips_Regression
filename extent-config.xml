<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme -->
        <!-- standard, dark -->
        <theme>dark</theme>
    
        <!-- document encoding -->
        <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>
        
        <!-- protocol for script and stylesheets -->
        <!-- defaults to https -->
        <protocol>https</protocol>
        
        <!-- title of the document -->
        <documentTitle>QA report</documentTitle>
        
        <!-- report name - displayed at top-nav -->
        <reportName>Automation Report</reportName>
        
        <!-- location of charts in the test view -->
        <!-- top, bottom -->
        <testViewChartLocation>bottom</testViewChartLocation>
        
        <!-- global date format override -->
   		<!-- defaults to yyyy-MM-dd -->
    	<dateFormat>yyyy-MM-dd</dateFormat>
    
    	<!-- global time format override -->
    	<!-- defaults to HH:mm:ss -->
    	<timeFormat>HH:mm:ss</timeFormat>
        
		<!-- settings to enable/disable views -->
		<!-- professional version only -->
		<enableCategoryView>true</enableCategoryView>
		<enableAuthorView>false</enableAuthorView>
		<enableExceptionView>true</enableExceptionView>
		<enableTestRunnerLogsView>true</enableTestRunnerLogsView>
		
        <!-- custom javascript -->
        <scripts>
            <![CDATA[
                $(document).ready(function() {
                
                var cssUrl = "http://nuguya-ci.duckdns.org:8088/job/08_Chips_App_CarLife/ws/extent.css";
				var head = document.getElementsByTagName("head")[0];
				var link = document.createElement("link");
				link.rel = "stylesheet";
				link.type = "text/css";
				link.href = cssUrl;
				document.head.appendChild(link);
                    
                });
                
                
            ]]>
        </scripts>
        
        <!-- custom styles -->
        <styles>
            <![CDATA[
                
            ]]>
        </styles>
    </configuration>
</extentreports>